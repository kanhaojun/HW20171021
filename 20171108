請寫一個程式,算出每個月的天數
import java.util.Scanner;
public class Thirdhalftwo {
    public static void main(String[] argv){
        Scanner sc =new Scanner(System.in);
        System.out.print("輸入月份");
        int mon =sc.nextInt();
        int doc =mon;
        
        switch(doc){
            case 12:
            case 10:
            case  8:
            case  7:
            case  5:
            case  3:
            case  1:
                System.out.print("31 days");
                break;
            case 11:
            case  9:
            case  6:
            case  4:           
                System.out.print("30 days");
                break;
            default:
                System.out.print("29 days or 28 days");
        }
